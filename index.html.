    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        :root { --primary: #ff758c; --secondary: #ff7eb3; --glass: rgba(255, 255, 255, 0.15); }
        body, html { margin: 0; padding: 0; width: 100%; height: 100%; overflow: hidden; font-family: 'Poppins', sans-serif; background: #000; }
        .bg-gradient { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(45deg, #ff9a9e, #fad0c4, #ffecd2, #fcb69f); background-size: 400% 400%; animation: gradientBG 15s ease infinite; z-index: -1; }
        @keyframes gradientBG { 0% { background-position: 0% 50%; } 50% { background-position: 100% 50%; } 100% { background-position: 0% 50%; } }
        .container { height: 100vh; display: flex; justify-content: center; align-items: center; perspective: 1000px; }
        .card { background: var(--glass); backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px); border: 1px solid rgba(255, 255, 255, 0.4); border-radius: 30px; padding: 40px; text-align: center; color: #444; box-shadow: 0 25px 45px rgba(0,0,0,0.1); max-width: 450px; width: 85%; transform-style: preserve-3d; transition: transform 0.1s; }
        h1 { font-family: 'Dancing Script', cursive; font-size: 3.5rem; color: #d63384; margin: 0; }
        p { font-size: 1.1rem; line-height: 1.6; color: #333; margin-top: 20px; }
        .btn-celebrate { margin-top: 25px; padding: 15px 35px; border: none; border-radius: 50px; background: #d63384; color: white; font-weight: 600; cursor: pointer; transition: 0.3s; box-shadow: 0 5px 15px rgba(214, 51, 132, 0.3); }
        .btn-celebrate:hover { transform: scale(1.05); background: #b02a6b; }
    </style>
