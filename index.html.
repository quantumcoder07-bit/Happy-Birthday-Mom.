<body>

    <audio id="birthdayMusic" loop>
        <source src="https://www.soundhelix.com/examples/mp3/SoundHelix-Song-1.mp3" type="audio/mpeg">
    </audio>

    <div class="bg-gradient"></div>

    <div class="container">
        <div class="card" id="card">
            <h1>Happy Birthday, Mom!</h1>
            <p>
                To the one who held my hand first,<br>
                And taught my heart how to fly.<br>
                In your smile, I see the sun,<br>
                In your love, I find my sky.<br><br>
                <span style="font-style: italic; font-weight: 600; color: #d63384;">
                    You are my anchor and my inspiration.
                </span>
            </p>
            <button class="btn-celebrate" onclick="triggerMagic()">Press for a Surprise ✨</button>
        </div>
    </div>

    <script>
        const music = document.getElementById('birthdayMusic');
        const card = document.getElementById('card');

        function triggerMagic() {
            music.play();
            confetti({ particleCount: 150, spread: 70, origin: { y: 0.6 } });
            var end = Date.now() + (3 * 1000);
            (function frame() {
                confetti({ particleCount: 2, angle: 60, spread: 55, origin: { x: 0 }, colors: ['#ff0000', '#ff758c'] });
                confetti({ particleCount: 2, angle: 120, spread: 55, origin: { x: 1 }, colors: ['#ff0000', '#ff758c'] });
                if (Date.now() < end) { requestAnimationFrame(frame); }
            }());
        }

        document.addEventListener('mousemove', (e) => {
            let xAxis = (window.innerWidth / 2 - e.pageX) / 20;
            let yAxis = (window.innerHeight / 2 - e.pageY) / 20;
            card.style.transform = `rotateY(${xAxis}deg) rotateX(${yAxis}deg)`;
        });
    </script>
</body>
